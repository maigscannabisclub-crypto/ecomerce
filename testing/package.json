{
  "name": "ecommerce-testing",
  "version": "1.0.0",
  "description": "Testing suite for e-commerce platform",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:contract",
    "test:unit": "jest --config jest.config.unit.js",
    "test:unit:coverage": "jest --config jest.config.unit.js --coverage",
    "test:unit:watch": "jest --config jest.config.unit.js --watch",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:coverage": "jest --config jest.config.integration.js --coverage",
    "test:contract": "npm run test:contract:consumer && npm run test:contract:provider",
    "test:contract:consumer": "jest --config jest.config.contract.js --testPathPattern=consumer",
    "test:contract:provider": "jest --config jest.config.contract.js --testPathPattern=provider",
    "test:contract:publish": "pact-broker publish pacts --consumer-app-version=$(git rev-parse HEAD) --broker-base-url=$PACT_BROKER_URL",
    "test:e2e": "cypress run --config-file testing/e2e/cypress.config.ts",
    "test:e2e:open": "cypress open --config-file testing/e2e/cypress.config.ts",
    "test:e2e:headless": "cypress run --config-file testing/e2e/cypress.config.ts --headless",
    "test:load": "npm run test:load:browse && npm run test:load:order && npm run test:load:mixed",
    "test:load:browse": "artillery run testing/load/scenarios/browse-products.yml",
    "test:load:order": "artillery run testing/load/scenarios/create-order.yml",
    "test:load:mixed": "artillery run testing/load/scenarios/mixed-traffic.yml",
    "test:chaos": "bash testing/chaos/scripts/run-all-experiments.sh",
    "test:chaos:network": "bash testing/chaos/scripts/network-partition.sh",
    "test:all": "./testing/run-tests.sh all",
    "test:all:coverage": "./testing/run-tests.sh --coverage all",
    "test:ci": "./testing/run-tests.sh --ci all",
    "coverage": "node testing/coverage/merge-reports.js",
    "coverage:report": "nyc report --reporter=html --reporter=text-summary",
    "infrastructure:up": "docker-compose -f testing/docker-compose.test.yml up -d",
    "infrastructure:down": "docker-compose -f testing/docker-compose.test.yml down",
    "infrastructure:logs": "docker-compose -f testing/docker-compose.test.yml logs -f",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@pact-foundation/pact": "^12.1.0",
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "amqplib": "^0.10.3",
    "artillery": "^2.0.4",
    "cypress": "^13.6.1",
    "jest": "^29.7.0",
    "nyc": "^15.1.0",
    "pg": "^8.11.3",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
